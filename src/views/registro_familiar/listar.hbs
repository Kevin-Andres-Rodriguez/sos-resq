<link rel="stylesheet" href="/css/cliente/listar.css">
<form action="registro_familiar/listar/" method="get"></form>


<div id="cliente-listar-container">
    <h1>Registro familiar</h1>
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <u>
                <h2>Datos </h2>
            </u>
            <div>

                <p>{{nombres}}</p>
                <p>{{apellidos}}</p>
                <p>{{correo_electronico}}</p>
                <p>{{telefono}}</p>
                <div>
                    <div>
                        <a href="/registro_familiar/editar/{{id_registro_familiar}}"><button type="button">Editar</button></a>
                    </div>
                    <div>
                        <a href="/registro_familiar/eliminar/{{id_registro_familiar}}"><button type="button"
                                style="background-color: red;">Eliminar</button></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
